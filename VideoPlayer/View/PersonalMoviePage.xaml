<Page x:Class="VideoPlayer.View.PersonalMoviePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VideoPlayer.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PersonalMoviePage">

    <Grid>
        <ScrollViewer>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="{Binding PosterPath}" HorizontalAlignment="Center" Margin="0, 10" Height="200" VerticalAlignment="Top"></Image>
                    <TextBlock Grid.Column="1" Margin="30" Text="{Binding Description}"></TextBlock>
                    <Button Click="GoForWatching" Grid.Column="1">Перейти к просмотру</Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
